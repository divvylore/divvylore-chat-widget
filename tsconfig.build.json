{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "outDir": "./dist/types",
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/__tests__/**",
    "src/test/**"
  ]
}
