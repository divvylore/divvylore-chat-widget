{
  "name": "divvylore-chat-widget",
  "private": false,
  "version": "2.0.0",
  "type": "module",
  "description": "The official Divvylore chat widget for secure enterprise assistants",
  "main": "dist/DivvyloreChatWidget.cjs.js",
  "module": "dist/DivvyloreChatWidget.esm.js",
  "types": "dist/DivvyloreChatWidget.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/DivvyloreChatWidget.d.ts",
      "import": "./dist/DivvyloreChatWidget.esm.js",
      "require": "./dist/DivvyloreChatWidget.cjs.js"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "npm run build:types && npm run build:lib && npm run build:embed",
    "build:types": "tsc -p tsconfig.build.json",
    "build:lib": "rollup -c rollup.config.mjs",
    "build:embed": "vite build --config vite.embed.config.ts",
    "build:demo": "vite build",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0",
    "react-markdown": "^10.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@rollup/plugin-typescript": "^12.1.3",
    "@rollup/plugin-commonjs": "^26.0.3",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "rollup": "^4.44.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-dts": "^6.2.1",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}
